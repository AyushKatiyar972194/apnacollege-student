<%- layout('/layouts/boilerplate') %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body text-center">
                    <h2 class="card-title text-success mb-4">
                        <i class="fas fa-check-circle"></i> Booking Confirmed!
                    </h2>
                    
                    <div class="alert alert-success">
                        Your payment has been processed successfully.
                    </div>

                    <div class="booking-details mt-4">
                        <h4>Booking Details</h4>
                        <hr>
                        <div class="row">
                            <div class="col-md-6 text-start">
                                <p><strong>Property:</strong> <%= reservation.listing.title %></p>
                                <p><strong>Check-in:</strong> <%= reservation.checkIn.toLocaleDateString() %></p>
                                <p><strong>Check-out:</strong> <%= reservation.checkOut.toLocaleDateString() %></p>
                            </div>
                            <div class="col-md-6 text-start">
                                <p><strong>Guests:</strong> <%= reservation.numberOfGuests %></p>
                                <p><strong>Total Amount:</strong> â‚¹<%= reservation.totalPrice.toLocaleString('en-IN') %></p>
                                <p><strong>Booking ID:</strong> <%= reservation._id %></p>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <p class="text-muted">A confirmation email has been sent to your registered email address.</p>
                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <a href="/listings" class="btn btn-outline-primary">
                                <i class="fas fa-home"></i> Back to Listings
                            </a>
                            <a href="/reservations/my-reservations" class="btn btn-primary">
                                <i class="fas fa-list"></i> View My Bookings
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 