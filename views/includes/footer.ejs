  color: #b0b0b0;
  font-size: 0.97rem;
  text-decoration: none;
}
.site-footer .footer-links a:hover {
  color: #fe424d;
  text-decoration: underline;
}
.site-footer .footer-socials {
  display: flex;
  gap: 0.7rem;
}
.site-footer .footer-socials a {
