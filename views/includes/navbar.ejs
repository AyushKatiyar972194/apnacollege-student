<style>
  .navbar {
    background: #fff;
    border-bottom: 1px solid #ececec;
    font-size: 1rem;
    padding-top: 0.2rem;
    padding-bottom: 0.2rem;
  }
  .navbar-brand {
    font-size: 1.3rem;
    font-weight: 700;
    color: #222 !important;
    letter-spacing: 1px;
    display: flex;
    align-items: center;
    gap: 0.4rem;
  }
  .navbar-brand i {
    font-size: 1.5rem;
    color: #fe424d;
  }
  .navbar-nav .nav-link {
    font-size: 1rem;
    font-weight: 500;
    color: #222 !important;
    margin-right: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.2rem;
    padding: 0.3rem 0.7rem;
    border-radius: 0.5rem;
    transition: background 0.13s;
  }
  .navbar-nav .nav-link:hover, .navbar-nav .nav-link.active {
    background: #f7f7fa;
    color: #fe424d !important;
  }
  .navbar-nav .btn-auth {
    background: #fe424d;
    color: #fff !important;
    border-radius: 1.2rem;
    font-weight: 600;
    margin-left: 0.3rem;
    padding: 0.3rem 1.1rem;
    border: none;
    transition: background 0.13s;
  }
  .navbar-nav .btn-auth:hover {
    background: #d93c3c;
    color: #fff !important;
  }
  .navbar-toggler {
    border: none;
    outline: none;
  }
  .navbar-search {
    min-width: 120px;
    max-width: 180px;
    font-size: 0.97rem;
    border-radius: 1.2rem;
    padding: 0.3rem 1.1rem;
    margin-right: 0.3rem;
  }
  @media (max-width: 767px) {
    .navbar-search {
      min-width: 70px;
      max-width: 100%;
      font-size: 0.97rem;
      margin-bottom: 0.5rem;
    }
    .navbar-nav .nav-link {
      margin-right: 0.2rem;
      padding: 0.3rem 0.5rem;
    }
    .navbar-nav .btn-auth {
      margin-left: 0.2rem;
      padding: 0.3rem 0.7rem;
    }
  }
</style>
<nav class="navbar navbar-expand-md sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i> FortuneVila</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link" href="/listings">Explore</a>
        </li>
        <% if (typeof currUser !== 'undefined' && currUser) { %>
        <li class="nav-item">
          <a class="nav-link" href="/listings/new"><i class="fa-solid fa-plus"></i>Host</a>
        </li>
        <% } %>
      </ul>
      <form class="d-flex align-items-center" role="search" action="/listings/search" method="GET">
        <input class="form-control navbar-search" type="search" placeholder="Search" name="title">
        <button class="btn btn-outline-secondary btn-sm" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
      </form>
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <% if (typeof currUser !== 'undefined' && currUser) { %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fas fa-user-circle"></i>
            <%= currUser.displayName || currUser.username || (currUser.name ? `${currUser.name.givenName || ''} ${currUser.name.familyName || ''}`.trim() : 'User') %>
          </a>
          <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <li><a class="dropdown-item" href="/reservations">My Reservations</a></li>
            <li><hr class="dropdown-divider"></li>
            <li>
              <form action="/logout" method="POST" class="d-inline">
                <button type="submit" class="dropdown-item text-danger">
                  <i class="fas fa-sign-out-alt"></i> Logout
                </button>
              </form>
            </li>
          </ul>
        </li>
        <% } else { %>
        <li class="nav-item">
          <a class="nav-link" href="/listings/new">Host</a>
        </li>
        <li class="nav-item">
          <a class="nav-link btn-auth" href="/signup">Sign up</a>
        </li>
        <li class="nav-item">
          <a class="nav-link btn-auth" href="/login">Log in</a>
        </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>